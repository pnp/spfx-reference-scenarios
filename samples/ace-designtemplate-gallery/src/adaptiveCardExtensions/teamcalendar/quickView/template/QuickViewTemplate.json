{
  "type": "AdaptiveCard",
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.3",
  "body": [{
      "type": "ColumnSet",
      "columns": [{
          "type": "Column",
          "width": 26,
          "items": [{
            "type": "TextBlock",
            "text": "${$root.strings.PreviousButtonText}",
            "wrap": true,
            "weight": "Bolder",
            "size": "Default",
            "fontType": "Default",
            "color": "Accent",
            "isSubtle": false
          }],
          "verticalContentAlignment": "Center",
          "selectAction": {
            "type": "Action.Submit",
            "associatedInputs": "none",
            "data": {
              "id": "prev"
            }
          }
        },
        {
          "type": "Column",
          "width": 48,
          "items": [{
            "type": "TextBlock",
            "text": "${formatDateTime(viewDate, 'MMM yyyy')} ",
            "wrap": true,
            "size": "Large",
            "fontType": "Default",
            "weight": "Bolder",
            "color": "Default",
            "isSubtle": false,
            "horizontalAlignment": "Center"
          }]
        },
        {
          "type": "Column",
          "width": 26,
          "items": [{
            "type": "TextBlock",
            "text": "${$root.strings.NextButtonText}",
            "wrap": true,
            "horizontalAlignment": "Right",
            "weight": "Bolder",
            "fontType": "Default",
            "size": "Default",
            "color": "Accent"
          }],
          "verticalContentAlignment": "Center",
          "selectAction": {
            "type": "Action.Submit",
            "associatedInputs": "none",
            "data": {
              "id": "next"
            }
          }
        }
      ],
      "style": "default"
    },
    {
      "type": "Container",
      "spacing": "Large"
    },
    {
      "type": "ColumnSet",
      "columns": [{
        "type": "Column",
        "width": "stretch",
        "items": [{
          "type": "TextBlock",
          "text": "${$root.strings.Sunday}",
          "wrap": true,
          "weight": "Bolder",
          "isSubtle": true,
          "horizontalAlignment": "Center"
        }]
      }, {
        "type": "Column",
        "width": "stretch",
        "items": [{
          "type": "TextBlock",
          "text": "${$root.strings.Monday}",
          "wrap": true,
          "weight": "Bolder",
          "isSubtle": true,
          "horizontalAlignment": "Center"
        }]
      }, {
        "type": "Column",
        "width": "stretch",
        "items": [{
          "type": "TextBlock",
          "text": "${$root.strings.Tuesday}",
          "wrap": true,
          "weight": "Bolder",
          "isSubtle": true,
          "horizontalAlignment": "Center"
        }]
      }, {
        "type": "Column",
        "width": "stretch",
        "items": [{
          "type": "TextBlock",
          "text": "${$root.strings.Wednesday}",
          "wrap": true,
          "weight": "Bolder",
          "isSubtle": true,
          "horizontalAlignment": "Center"
        }]
      }, {
        "type": "Column",
        "width": "stretch",
        "items": [{
          "type": "TextBlock",
          "text": "${$root.strings.Thursday}",
          "wrap": true,
          "weight": "Bolder",
          "isSubtle": true,
          "horizontalAlignment": "Center"
        }]
      }, {
        "type": "Column",
        "width": "stretch",
        "items": [{
          "type": "TextBlock",
          "text": "${$root.strings.Friday}",
          "wrap": true,
          "weight": "Bolder",
          "isSubtle": true,
          "horizontalAlignment": "Center"
        }]
      }, {
        "type": "Column",
        "width": "stretch",
        "items": [{
          "type": "TextBlock",
          "text": "${$root.strings.Saturday}",
          "wrap": true,
          "weight": "Bolder",
          "isSubtle": true,
          "horizontalAlignment": "Center"
        }]
      }]
    },
    {
      "type": "ColumnSet",
      "$data": "${$root.days}",
      "$when": "${mod($index, 7) == 0}",
      "columns": [{
        "type": "Column",
        "width": "stretch",
        "items": [{
          "type": "TextBlock",
          "text": "${if(day <= 0, '', day)} ",
          "wrap": true,
          "color": "${if(count(appointments) > 0, 'Accent','Default')}",
          "isSubtle": "${if(count(appointments) > 0,false,true)}",
          "horizontalAlignment": "Center",
          "weight": "${if(count(appointments) > 0, 'Bolder','Default')}"
        }],
        "selectAction": {
          "type": "Action.Submit",
          "associatedInputs": "none",
          "$when": "${count(appointments) > 0 }",
          "data": {
            "id": "selectDay",
            "day": "${$root.days[$index]}"
          }
        }
      }, {
        "type": "Column",
        "width": "stretch",
        "items": [{
          "type": "TextBlock",
          "text": "${if($root.days[$index+1].day <= 0, '', $root.days[$index+1].day)} ",
          "wrap": true,
          "color": "${if(count($root.days[$index+1].appointments) > 0, 'Accent','Default')}",
          "horizontalAlignment": "Center",
          "isSubtle": "${if(count($root.days[$index+1].appointments) > 0, false,true)}",
          "weight": "${if(count($root.days[$index+1].appointments) > 0, 'Bolder','Default')}"
        }],
        "selectAction": {
          "type": "Action.Submit",
          "associatedInputs": "none",
          "$when": "${count($root.days[$index+1].appointments) > 0 }",
          "data": {
            "id": "selectDay",
            "day": "${$root.days[$index+1]}"
          }
        }
      }, {
        "type": "Column",
        "width": "stretch",
        "items": [{
          "type": "TextBlock",
          "text": "${if($root.days[$index+2].day <= 0, '', $root.days[$index+2].day)} ",
          "wrap": true,
          "color": "${if(count($root.days[$index+2].appointments) > 0, 'Accent','Default')}",
          "horizontalAlignment": "Center",
          "isSubtle": "${if(count($root.days[$index+2].appointments) > 0, false,true)}",
          "weight": "${if(count($root.days[$index+2].appointments) > 0, 'Bolder','Default')}"
        }],
        "selectAction": {
          "type": "Action.Submit",
          "associatedInputs": "none",
          "$when": "${count($root.days[$index+2].appointments) > 0 }",
          "data": {
            "id": "selectDay",
            "day": "${$root.days[$index+2]}"
          }
        }
      }, {
        "type": "Column",
        "width": "stretch",
        "items": [{
          "type": "TextBlock",
          "text": "${if($root.days[$index+3].day <= 0, '', $root.days[$index+3].day)} ",
          "wrap": true,
          "color": "${if(count($root.days[$index+3].appointments) > 0, 'Accent','Default')}",
          "horizontalAlignment": "Center",
          "isSubtle": "${if(count($root.days[$index+3].appointments) > 0, false,true)}",
          "weight": "${if(count($root.days[$index+3].appointments) > 0, 'Bolder','Default')}"
        }],
        "selectAction": {
          "type": "Action.Submit",
          "associatedInputs": "none",
          "$when": "${count($root.days[$index+3].appointments) > 0 }",
          "data": {
            "id": "selectDay",
            "day": "${$root.days[$index+3]}"
          }
        }
      }, {
        "type": "Column",
        "width": "stretch",
        "items": [{
          "type": "TextBlock",
          "text": "${if($root.days[$index+4].day <= 0, '', $root.days[$index+4].day)} ",
          "wrap": true,
          "color": "${if(count($root.days[$index+4].appointments) > 0, 'Accent','Default')}",
          "horizontalAlignment": "Center",
          "isSubtle": "${if(count($root.days[$index+4].appointments) > 0, false,true)}",
          "weight": "${if(count($root.days[$index+4].appointments) > 0, 'Bolder','Default')}"
        }],
        "selectAction": {
          "type": "Action.Submit",
          "associatedInputs": "none",
          "$when": "${count($root.days[$index+4].appointments) > 0 }",
          "data": {
            "id": "selectDay",
            "day": "${$root.days[$index+4]}"
          }
        }
      }, {
        "type": "Column",
        "width": "stretch",
        "items": [{
          "type": "TextBlock",
          "text": "${if($root.days[$index+5].day <= 0, '', $root.days[$index+5].day)} ",
          "wrap": true,
          "color": "${if(count($root.days[$index+5].appointments) > 0, 'Accent','Default')}",
          "horizontalAlignment": "Center",
          "isSubtle": "${if(count($root.days[$index+5].appointments) > 0, false,true)}",
          "weight": "${if(count($root.days[$index+5].appointments) > 0, 'Bolder','Default')}"
        }],
        "selectAction": {
          "type": "Action.Submit",
          "associatedInputs": "none",
          "$when": "${count($root.days[$index+5].appointments) > 0 }",
          "data": {
            "id": "selectDay",
            "day": "${$root.days[$index+5]}"
          }
        }
      }, {
        "type": "Column",
        "width": "stretch",
        "items": [{
          "type": "TextBlock",
          "text": "${if($root.days[$index+6].day <= 0, '', $root.days[$index+6].day)} ",
          "wrap": true,
          "color": "${if(count($root.days[$index+6].appointments) > 0, 'Accent','Default')}",
          "horizontalAlignment": "Center",
          "isSubtle": "${if(count($root.days[$index+6].appointments) > 0, false,true)}",
          "weight": "${if(count($root.days[$index+6].appointments) > 0, 'Bolder','Default')}"
        }],
        "selectAction": {
          "type": "Action.Submit",
          "associatedInputs": "none",
          "$when": "${count($root.days[$index+6].appointments) > 0 }",
          "data": {
            "id": "selectDay",
            "day": "${$root.days[$index+6]}"
          }
        }
      }],
      "style": "${if($root.days[$index].day == $root.selectedSunday.day,'accent','default')}",
      "height": "${if($root.days[$index].day == $root.selectedSunday.day,'stretch','auto')}",
      "bleed": "${if($root.days[$index].day == $root.selectedSunday.day,true,false)}",
      "spacing": "${if($root.days[$index].day == $root.selectedSunday.day,'small','medium')}"
    },
    {
      "type": "Container",
      "spacing": "Large"
    },
    {
      "type": "Container",
      "$when": "${count($root.selectedAppointments) > 0}",
      "items": [{
          "type": "Container",
          "spacing": "Medium"
        },
        {
          "type": "TextBlock",
          "text": "${count(where($root.selectedAppointments, x, x.appointmentType == 'OOO'))} team members are out of office",
          "$when": "${count(where($root.selectedAppointments, x, x.appointmentType == 'OOO')) > 0}",
          "wrap": true,
          "size": "Medium",
          "weight": "Bolder",
          "spacing": "Medium"
        },
        {
          "type": "ColumnSet",
          "$data": "${where($root.selectedAppointments, x, x.appointmentType == 'OOO')}",
          "$when": "${count(where($root.selectedAppointments, x, x.appointmentType == 'OOO')) > 0}",
          "columns": [{
              "type": "Column",
              "items": [{
                "type": "TextBlock",
                "$when": "${formatDateTime(startDate, 'MMM dd') == formatDateTime(endDate, 'MMM dd')}",
                "text": "${formatDateTime(startDate, 'MMM d')}",
                "wrap": true,
                "color": "Default",
                "isSubtle": false
              }, {
                "type": "TextBlock",
                "$when": "${formatDateTime(startDate, 'MMM dd') != formatDateTime(endDate, 'MMM dd') && formatDateTime(startDate, 'MMM') == formatDateTime(endDate, 'MMM')}",
                "text": "${formatDateTime(startDate, 'MMM dd')}-${formatDateTime(endDate, 'dd')}",
                "wrap": true,
                "color": "Default",
                "isSubtle": false
              }, {
                "type": "TextBlock",
                "$when": "${formatDateTime(startDate, 'MMM') != formatDateTime(endDate, 'MMM')}",
                "text": "${formatDateTime(startDate, 'MMM dd')}-${formatDateTime(endDate, 'MMM dd')}",
                "wrap": true,
                "color": "Default",
                "isSubtle": false
              }],
              "width": "100px"
            },
            {
              "type": "Column",
              "items": [{
                "type": "TextBlock",
                "text": "${title}",
                "wrap": true
              }],
              "width": 100
            }
          ],
          "spacing": "Medium"
        },
        {
          "type": "Container",
          "spacing": "Medium"
        },
        {
          "type": "TextBlock",
          "text": "${count(where($root.selectedAppointments, x, x.appointmentType == 'TASK'))}  tasks due",
          "$when": "${count(where($root.selectedAppointments, x, x.appointmentType == 'TASK')) > 0}",
          "wrap": true,
          "weight": "Bolder",
          "size": "Medium"
        },
        {
          "type": "ColumnSet",
          "$data": "${where($root.selectedAppointments, x, x.appointmentType == 'TASK')}",
          "$when": "${count(where($root.selectedAppointments, x, x.appointmentType == 'TASK')) > 0}",
          "columns": [{
              "type": "Column",
              "width": "80px",
              "items": [{
                "type": "TextBlock",
                "$when": "${formatDateTime(startDate, 'MMM dd') == formatDateTime(endDate, 'MMM dd')}",
                "text": "${formatDateTime(startDate, 'MMM d')}",
                "wrap": true,
                "color": "Default",
                "isSubtle": false
              }, {
                "type": "TextBlock",
                "$when": "${formatDateTime(startDate, 'MMM dd') != formatDateTime(endDate, 'MMM dd') && formatDateTime(startDate, 'MMM') == formatDateTime(endDate, 'MMM')}",
                "text": "${formatDateTime(startDate, 'MMM dd')}-${formatDateTime(endDate, 'dd')}",
                "wrap": true,
                "color": "Default",
                "isSubtle": false
              }, {
                "type": "TextBlock",
                "$when": "${formatDateTime(startDate, 'MMM') != formatDateTime(endDate, 'MMM')}",
                "text": "${formatDateTime(startDate, 'MMM dd')}-${formatDateTime(endDate, 'MMM dd')}",
                "wrap": true,
                "color": "Default",
                "isSubtle": false
              }]
            },
            {
              "type": "Column",
              "width": 100,
              "items": [{
                "type": "TextBlock",
                "text": "${title}",
                "wrap": true
              }]
            }
          ],
          "spacing": "Medium"
        }
      ],
      "style": "emphasis"
    }
  ]
}