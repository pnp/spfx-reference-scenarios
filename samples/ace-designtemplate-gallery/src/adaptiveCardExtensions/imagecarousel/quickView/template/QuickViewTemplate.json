{
  "type": "AdaptiveCard",
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.3",
  "body": [{
      "type": "Container",
      "style": "emphasis",
      "items": [{
          "type": "Container"
        },
        {
          "type": "TextBlock",
          "text": "${app.title}",
          "wrap": true,
          "size": "Large",
          "weight": "Bolder",
          "spacing": "Large"
        },
        {
          "type": "TextBlock",
          "text": "${app.introContent}",
          "wrap": true
        },
        {
          "type": "Container",
          "spacing": "Large"
        }
      ]
    },
    {
      "type": "Container",
      "items": [{
        "type": "ColumnSet",
        "columns": [{
            "type": "Column",
            "width": "stretch",
            "backgroundImage": {
              "url": "${app.images[currentImage].imageUrl}",
              "horizontalAlignment": "Center"
            },
            "minHeight": "240px",
            "bleed": true
          },
          {
            "type": "Column",
            "width": "56px",
            "backgroundImage": {
              "url": "${app.images[nextIndex].imageUrl}"
            },
            "bleed": true,
            "items": [{
              "type": "Image",
              "url": "data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAABQAAAAUCAYAAACNiR0NAAAACXBIWXMAAAsTAAALEwEAmpwYAAAAAXNSR0IArs4c6QAAAARnQU1BAACxjwv8YQUAAABlSURBVHgB7ZLBDYAgDEV/ncARHMERdANHcFNHcATdgBFKCVwJCXw48ZKfXpqXNi0w6Yqq3pbPsoFBECUhXerY0r2n9LWsYGCiSyNPrmdBHe0TUlemHoX6NjWPXTrKkeopIj8mQ/DaiYbE4ZfFKQAAAABJRU5ErkJggg==",
              "width": "24px",
              "height": "24px"
            }],
            "verticalContentAlignment": "Center",
            "selectAction": {
              "type": "Action.Submit",
              "data": {
                "id": "next"
              }
            }
          }
        ],
        "horizontalAlignment": "Center"
      }],
      "minHeight": "1px",
      "bleed": true,
      "spacing": "None",
      "id": "img_set_1"
    },
    {
      "type": "Container",
      "style": "emphasis",
      "items": [{
          "type": "Container",
          "spacing": "None",
          "minHeight": "16px"
        },
        {
          "type": "TextBlock",
          "text": "${strings.FeatureHeading}",
          "wrap": true,
          "spacing": "Large",
          "size": "Default",
          "weight": "Bolder",
          "horizontalAlignment": "Center",
          "color": "Accent"
        },
        {
          "type": "Container",
          "spacing": "None",
          "minHeight": "8px"
        },
        {
          "type": "ColumnSet",
          "$data": "${app.icons}",
          "$when": "{mod($index, 2) == 0}",
          "columns": [{
              "type": "Column",
              "width": 48,
              "items": [{
                  "type": "Image",
                  "url": "${iconUrl} ",
                  "horizontalAlignment": "Center",
                  "width": "40px",
                  "height": "40px"
                },
                {
                  "type": "TextBlock",
                  "text": "${title}",
                  "wrap": true,
                  "weight": "Bolder",
                  "size": "Medium",
                  "horizontalAlignment": "Center"
                },
                {
                  "type": "TextBlock",
                  "text": "${iconText}",
                  "wrap": true,
                  "horizontalAlignment": "Center",
                  "size": "Small",
                  "isSubtle": true
                }
              ]
            },
            {
              "type": "Column",
              "width": 2
            },
            {
              "type": "Column",
              "width": 48,
              "items": [{
                  "type": "Image",
                  "url": "${$root.app.icons[$index+1].iconUrl}",
                  "horizontalAlignment": "Center",
                  "width": "40px",
                  "height": "40px"
                },
                {
                  "type": "TextBlock",
                  "text": "${$root.app.icons[$index+1].title} ",
                  "wrap": true,
                  "horizontalAlignment": "Center",
                  "size": "Medium",
                  "weight": "Bolder"
                },
                {
                  "type": "TextBlock",
                  "text": "${$root.app.icons[$index+1].iconText} ",
                  "wrap": true,
                  "horizontalAlignment": "Center",
                  "size": "Small",
                  "isSubtle": true
                }
              ]
            }
          ],
          "spacing": "Medium"
        }
      ],
      "spacing": "None"
    },
    {
      "type": "Container",
      "minHeight": "16px",
      "spacing": "None"
    },
    {
      "type": "Container",
      "style": "emphasis",
      "items": [{
          "type": "Container",
          "spacing": "None",
          "minHeight": "16px"
        },
        {
          "type": "TextBlock",
          "text": "${strings.SpecsHeading}",
          "wrap": true,
          "weight": "Bolder",
          "horizontalAlignment": "Center",
          "spacing": "Large",
          "color": "Accent"
        },
        {
          "type": "Container",
          "$data": "${app.specTypes}",
          "items": [{
            "type": "TextBlock",
            "text": "${title}",
            "wrap": true,
            "spacing": "Large",
            "size": "Medium"
          }, {
            "type": "ColumnSet",
            "$data": "${specs}",
            "columns": [{
                "type": "Column",
                "width": "stretch",
                "items": [{
                  "type": "TextBlock",
                  "text": "${title}",
                  "wrap": true,
                  "weight": "Bolder",
                  "horizontalAlignment": "Left"
                }]
              },
              {
                "type": "Column",
                "width": "stretch",
                "items": [{
                  "type": "TextBlock",
                  "text": "${text}",
                  "wrap": true
                }]
              }
            ],
            "spacing": "Medium",
            "separator": true
          }, {
            "type": "Container"
          }]
        }
      ],
      "spacing": "None"
    }
  ]
}